{
  "name": "ai-agent-trace-ui",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "preinstall": "npx --yes corepack@latest enable && corepack prepare pnpm@10.14.0 --activate || true",
    "predev": "pnpm install",
    "dev": "pnpm install && pnpm -r run --parallel dev",
    "build": "pnpm run --parallel build",
    "postinstall": "pnpm -F ai-agent-trace-ui-core build",
    "format": "pnpm exec prettier . --write",
    "format:check": "pnpm exec prettier .",
    "eslint": "pnpm dlx eslint . --fix",
    "eslint:check": "pnpm dlx eslint .",
    "tsc": "pnpm run --parallel tsc",
    "test": "pnpm run --parallel test"
  },
  "packageManager": "pnpm@10.14.0",
  "pnpm": {
    "allowedBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.38.0"
  }
}

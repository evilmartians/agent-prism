{
  "name": "@evilmartians/agent-prism",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --parallel build",
    "deploy:storybook": "pnpm --filter @evilmartians/agent-prism-storybook build && firebase deploy --only hosting",
    "deploy:saas": "pnpm --filter saas build && firebase deploy --only hosting:ai-trace-explorer",
    "format": "pnpm exec prettier . --write",
    "format:check": "pnpm exec prettier .",
    "eslint": "pnpm dlx eslint . --fix",
    "eslint:check": "pnpm dlx eslint .",
    "tsc": "pnpm run --parallel tsc",
    "test": "pnpm run --parallel test"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "classnames": "2.5.1",
    "package-manager-detector": "^1.5.0"
  },
  "bin": {
    "init": "./bin/init.js"
  }
}

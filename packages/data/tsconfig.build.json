{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false
  },
  "references": [
    { "path": "../types/tsconfig.build.json" }
  ],
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}

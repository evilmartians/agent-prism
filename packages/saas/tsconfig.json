{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@evilmartians/agent-prism-types": ["../types/src"],
      "@evilmartians/agent-prism-data": ["../data/src"],
      "@evilmartians/agent-prism-ui": ["../ui/src"]
    }
  },
  "include": ["src", "types.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
